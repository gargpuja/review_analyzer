<% flash.each do |key, value| %>
<div class="alert alert-<%= key %>" role="alert" id="flash">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<%= value%>
</div>
<% end %>


<div align="center" style="margin-top: 15%;">
<%= simple_form_for @business do |f| %>
  <div class="form-group">
  <%= f.label :business_name,style: 'font-weight: bold;'%>
  <%= f.text_field :name , class: 'form-control',style: 'width:30%;' %>
 </div>
 <div class="form-group" >
  <%= f.label :email,style: 'font-weight: bold;'%>
  <%= f.text_field :email, class: 'form-control',style: 'width:30%;',placeholder: 'user@domain.com'%>
 </div>
 <%= f.button :submit, 'Submit',class: 'btn btn-primary' %>
<% end %>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		setTimeout(function() {
    	$('#flash').fadeOut();
		}, 3000);
		$('.close').click(function(){
			$('#flash').fadeOut();

	});
});
</script>